INC=include/
SRC=src/
OBJ=obj/
BIN=bin/

$(BIN)conecta: $(OBJ)conecta.o $(OBJ)jugador.o $(OBJ)matriz.o $(OBJ)tablero.o
	g++ -o $(BIN)conecta $(OBJ)conecta.o $(OBJ)jugador.o $(OBJ)matriz.o $(OBJ)tablero.o

$(OBJ)conecta.o: $(INC)jugador.h $(SRC)conecta.cpp
	g++ -c -o $(OBJ)conecta.o $(SRC)conecta.cpp  

$(OBJ)jugador.o: $(INC)jugador.h $(INC)tablero.h $(SRC)jugador.cpp
	g++ -c -o $(OBJ)jugador.o $(SRC)jugador.cpp

$(OBJ)matriz.o: $(INC)matriz.h $(SRC)matriz.cpp
	g++ -c -o $(OBJ)matriz.o $(SRC)matriz.cpp

$(OBJ)tablero.o: $(INC)tablero.h $(INC)matriz.h $(SRC)tablero.cpp
	g++ -c -o $(OBJ)tablero.o $(SRC)tablero.cpp

clean:
	rm $(OBJ)/*.o $(BIN)/conecta
